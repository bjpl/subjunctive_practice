# Staging Environment Configuration
# ⚠️  WARNING: This file contains staging settings - handle with care!

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_ENV=staging
APP_NAME=subjunctive-practice-staging
HOST=0.0.0.0
PORT=8000
DEBUG=false
BASE_URL=https://staging.your-domain.com
CORS_ORIGINS=https://staging.your-domain.com,http://localhost:3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://username:password@your-staging-db-host:5432/subjunctive_practice_staging
DB_POOL_SIZE=15
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://your-staging-redis-host:6379/0
REDIS_SESSION_URL=redis://your-staging-redis-host:6379/1
CACHE_TTL=3600

# =============================================================================
# API KEYS AND EXTERNAL SERVICES
# =============================================================================
OPENAI_API_KEY=your_staging_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7
OPENAI_RATE_LIMIT=500

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET_KEY=your_secure_staging_jwt_secret_key_minimum_64_characters_long
JWT_ACCESS_TOKEN_EXPIRE_HOURS=4
JWT_REFRESH_TOKEN_EXPIRE_HOURS=48
SESSION_SECRET_KEY=your_secure_staging_session_secret_key_minimum_32_chars
PASSWORD_SALT_ROUNDS=12

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_PER_MINUTE=500
AUTH_RATE_LIMIT_PER_MINUTE=10

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_UPLOAD_SIZE=25
ALLOWED_FILE_TYPES=.txt,.pdf,.docx,.json
UPLOAD_DIR=/app/uploads

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=DEBUG
LOG_FILE=/app/logs/app.log
LOG_MAX_SIZE=25
LOG_BACKUP_COUNT=7

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST=your-staging-smtp-host.com
SMTP_PORT=587
SMTP_USER=staging@your-domain.com
SMTP_PASSWORD=your_staging_smtp_password_here
SMTP_TLS=true
EMAIL_FROM=noreply-staging@your-domain.com
EMAIL_SUBJECT_PREFIX=[Staging] Subjunctive Practice

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================
SENTRY_DSN=https://your-staging-sentry-dsn-here@sentry.io/staging-project-id
ANALYTICS_API_KEY=your_staging_analytics_api_key_here
ENABLE_METRICS=true
METRICS_PORT=9090

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
HOT_RELOAD=false
DEBUG_SQL=true
ENABLE_PROFILING=true

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
HEALTH_CHECK_PATH=/health
SHUTDOWN_TIMEOUT=45
WORKERS=2
KEEP_ALIVE_TIMEOUT=8

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
ENABLE_TEST_ENDPOINTS=true
TEST_DATA_RESET=true
MOCK_EXTERNAL_SERVICES=false