# Development Environment Configuration
# Local development settings with debugging enabled

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_ENV=development
APP_NAME=subjunctive-practice-dev
HOST=localhost
PORT=8000
DEBUG=true
BASE_URL=http://localhost:8000
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/subjunctive_practice_dev
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_SESSION_URL=redis://localhost:6379/1
CACHE_TTL=1800

# =============================================================================
# API KEYS AND EXTERNAL SERVICES
# =============================================================================
OPENAI_API_KEY=your_development_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7
OPENAI_RATE_LIMIT=30

# =============================================================================
# SECURITY CONFIGURATION (less strict for development)
# =============================================================================
JWT_SECRET_KEY=development_jwt_secret_key_not_for_production_use_only
JWT_ACCESS_TOKEN_EXPIRE_HOURS=24
JWT_REFRESH_TOKEN_EXPIRE_HOURS=168
SESSION_SECRET_KEY=development_session_secret_key_not_for_production
PASSWORD_SALT_ROUNDS=10

# =============================================================================
# RATE LIMITING (relaxed for development)
# =============================================================================
RATE_LIMIT_PER_MINUTE=1000
AUTH_RATE_LIMIT_PER_MINUTE=100

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_UPLOAD_SIZE=10
ALLOWED_FILE_TYPES=.txt,.pdf,.docx,.json,.py,.js,.md
UPLOAD_DIR=uploads

# =============================================================================
# LOGGING CONFIGURATION (verbose for development)
# =============================================================================
LOG_LEVEL=DEBUG
LOG_FILE=logs/app.log
LOG_MAX_SIZE=5
LOG_BACKUP_COUNT=3

# =============================================================================
# EMAIL CONFIGURATION (optional for development)
# =============================================================================
# SMTP_HOST=smtp.mailtrap.io
# SMTP_PORT=2525
# SMTP_USER=your_mailtrap_user
# SMTP_PASSWORD=your_mailtrap_password
# SMTP_TLS=true
# EMAIL_FROM=dev@subjunctive-practice.local
# EMAIL_SUBJECT_PREFIX=[DEV] Subjunctive Practice

# =============================================================================
# MONITORING AND ANALYTICS (disabled for development)
# =============================================================================
# SENTRY_DSN=
# ANALYTICS_API_KEY=
ENABLE_METRICS=false
METRICS_PORT=9090

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
HOT_RELOAD=true
DEBUG_SQL=true
ENABLE_PROFILING=true

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
HEALTH_CHECK_PATH=/health
SHUTDOWN_TIMEOUT=10
WORKERS=1
KEEP_ALIVE_TIMEOUT=2

# =============================================================================
# DEVELOPMENT TESTING
# =============================================================================
ENABLE_TEST_ENDPOINTS=true
TEST_DATA_RESET=true
MOCK_EXTERNAL_SERVICES=true
ENABLE_API_DOCS=true

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
ENABLE_CORS_ALL=true
ENABLE_DEBUG_TOOLBAR=true
RELOAD_ON_CHANGE=true