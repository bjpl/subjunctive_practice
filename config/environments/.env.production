# Production Environment Configuration
# ⚠️  WARNING: This file contains production settings - handle with care!

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_ENV=production
APP_NAME=subjunctive-practice
HOST=0.0.0.0
PORT=8000
DEBUG=false
BASE_URL=https://your-production-domain.com
CORS_ORIGINS=https://your-production-domain.com,https://www.your-production-domain.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Use connection pooling service or managed database URL
DATABASE_URL=postgresql://username:password@your-db-host:5432/subjunctive_practice_prod
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Use Redis cluster or managed Redis service
REDIS_URL=redis://your-redis-host:6379/0
REDIS_SESSION_URL=redis://your-redis-host:6379/1
CACHE_TTL=7200

# =============================================================================
# API KEYS AND EXTERNAL SERVICES
# =============================================================================
OPENAI_API_KEY=your_production_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7
OPENAI_RATE_LIMIT=1000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=your_super_secure_production_jwt_secret_key_minimum_64_characters_long
JWT_ACCESS_TOKEN_EXPIRE_HOURS=2
JWT_REFRESH_TOKEN_EXPIRE_HOURS=24
SESSION_SECRET_KEY=your_super_secure_production_session_secret_key_minimum_32_chars
PASSWORD_SALT_ROUNDS=14

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_PER_MINUTE=1000
AUTH_RATE_LIMIT_PER_MINUTE=10

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_UPLOAD_SIZE=50
ALLOWED_FILE_TYPES=.txt,.pdf,.docx,.json
UPLOAD_DIR=/app/uploads

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log
LOG_MAX_SIZE=50
LOG_BACKUP_COUNT=10

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST=your-smtp-host.com
SMTP_PORT=587
SMTP_USER=your-email@your-domain.com
SMTP_PASSWORD=your_smtp_password_here
SMTP_TLS=true
EMAIL_FROM=noreply@your-production-domain.com
EMAIL_SUBJECT_PREFIX=[Subjunctive Practice]

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================
SENTRY_DSN=https://your-sentry-dsn-here@sentry.io/project-id
ANALYTICS_API_KEY=your_analytics_api_key_here
ENABLE_METRICS=true
METRICS_PORT=9090

# =============================================================================
# DEVELOPMENT CONFIGURATION (disabled in production)
# =============================================================================
HOT_RELOAD=false
DEBUG_SQL=false
ENABLE_PROFILING=false

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
HEALTH_CHECK_PATH=/health
SHUTDOWN_TIMEOUT=60
WORKERS=4
KEEP_ALIVE_TIMEOUT=10

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
SSL_CERT_PATH=/app/ssl/cert.pem
SSL_KEY_PATH=/app/ssl/key.pem
SSL_REDIRECT=true

# =============================================================================
# EXTERNAL INTEGRATIONS (if needed)
# =============================================================================
# Vault integration for secrets management
# VAULT_URL=https://your-vault-instance.com
# VAULT_TOKEN=your_vault_token_here
# VAULT_SECRET_PATH=secret/data/subjunctive-practice

# AWS Secrets Manager integration
# AWS_SECRET_NAME=subjunctive-practice-secrets
# AWS_DEFAULT_REGION=us-east-1

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket