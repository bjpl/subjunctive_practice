# Environment Configuration Template
# Spanish Subjunctive Practice Application
# Copy this file to .env and update with your actual values

# ================================
# Application Settings
# ================================
ENVIRONMENT=development
DEBUG=true
VERSION=1.0.0
APP_NAME=Spanish Subjunctive Practice
API_V1_PREFIX=/api/v1

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=true

# ================================
# Database Configuration
# ================================
# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=subjunctive_practice
POSTGRES_USER=app_user
POSTGRES_PASSWORD=change_me_in_production
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Database Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ================================
# Redis Configuration
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# Redis Cache Settings
CACHE_TTL=3600
CACHE_PREFIX=subjunctive:

# ================================
# Security & Authentication
# ================================
# JWT Settings (Generate secure random strings for production)
JWT_SECRET_KEY=change_me_to_a_random_secret_key_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Session Settings
SESSION_SECRET_KEY=change_me_to_a_random_session_key_in_production
SESSION_COOKIE_NAME=session_id
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax

# Password Hashing
PASSWORD_BCRYPT_ROUNDS=12

# ================================
# CORS Configuration
# ================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOW_HEADERS=*

# ================================
# OpenAI Configuration
# ================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=30
OPENAI_MAX_RETRIES=3

# ================================
# Email Configuration (Optional)
# ================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@subjunctivepractice.com
SMTP_FROM_NAME=Spanish Subjunctive Practice
SMTP_TLS=true

# ================================
# Monitoring & Logging
# ================================
# Sentry Error Tracking
SENTRY_DSN=
SENTRY_ENVIRONMENT=${ENVIRONMENT}
SENTRY_TRACES_SAMPLE_RATE=0.1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/backend.log
LOG_ROTATION=1 day
LOG_RETENTION=30 days

# ================================
# Rate Limiting
# ================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ================================
# File Upload
# ================================
MAX_UPLOAD_SIZE=10485760
ALLOWED_UPLOAD_EXTENSIONS=.txt,.pdf,.doc,.docx

# ================================
# Background Tasks
# ================================
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# ================================
# Testing
# ================================
TEST_DATABASE_URL=postgresql+asyncpg://test_user:test_pass@localhost:5432/test_subjunctive

# ================================
# Feature Flags
# ================================
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_SOCIAL_LOGIN=false
ENABLE_ANALYTICS=false

# ================================
# External APIs
# ================================
# Add any additional API keys here
GOOGLE_ANALYTICS_ID=
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=

# ================================
# Build Information (Auto-populated by CI/CD)
# ================================
BUILD_DATE=
VCS_REF=
GIT_COMMIT=
GIT_BRANCH=
