# Coverage.py configuration

[run]
source = backend
branch = True
omit =
    */tests/*
    */test_*.py
    */__pycache__/*
    */venv/*
    */env/*
    */alembic/*
    */migrations/*
    */scripts/*
    backend/__init__.py
    backend/main.py

[report]
precision = 2
show_missing = True
skip_covered = False
sort = Cover
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover

    # Don't complain about missing debug-only code:
    def __repr__
    def __str__

    # Don't complain if tests don't hit defensive assertion code:
    raise AssertionError
    raise NotImplementedError

    # Don't complain if non-runnable code isn't run:
    if __name__ == .__main__.:
    if TYPE_CHECKING:

    # Don't complain about abstract methods
    @abstractmethod
    @abc.abstractmethod

    # Don't complain about pass statements
    pass

[html]
directory = htmlcov
title = Backend Test Coverage Report

[xml]
output = coverage.xml
