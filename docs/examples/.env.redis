# Redis Configuration Example
# Add these to your .env file to enable Redis caching

# Redis connection URL
# For local development:
REDIS_URL=redis://localhost:6379/0

# For Redis with password:
# REDIS_URL=redis://:password@localhost:6379/0

# For Redis Cloud or managed service:
# REDIS_URL=redis://username:password@host:port/db

# Cache TTL (Time To Live) in seconds
# Default: 3600 (1 hour)
REDIS_CACHE_TTL=3600

# Cache key prefix for namespacing
# Default: "subjunctive"
REDIS_CACHE_PREFIX=subjunctive

# Redis connection pool size
# Default: 10
REDIS_POOL_SIZE=10

# Example configurations for different environments:

# Development (local Redis)
# REDIS_URL=redis://localhost:6379/0
# REDIS_CACHE_TTL=3600
# REDIS_CACHE_PREFIX=subjunctive_dev
# REDIS_POOL_SIZE=5

# Production (Redis Cloud)
# REDIS_URL=redis://default:password@redis-12345.cloud.redislabs.com:12345/0
# REDIS_CACHE_TTL=7200
# REDIS_CACHE_PREFIX=subjunctive_prod
# REDIS_POOL_SIZE=20

# Testing (separate Redis DB or no Redis)
# REDIS_URL=redis://localhost:6379/1
# REDIS_CACHE_TTL=300
# REDIS_CACHE_PREFIX=subjunctive_test
# REDIS_POOL_SIZE=3
